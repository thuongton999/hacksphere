{
  "name": "@hacksphere/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/main.ts",
    "build": "bun build src/main.ts --outdir dist --target node",
    "start": "node dist/main.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate": "drizzle-kit migrate",
    "migrate:generate": "drizzle-kit generate",
    "seed": "bun run src/database/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "fastify": "^5.2.0",
    "drizzle-orm": "^0.37.0",
    "postgres": "^3.4.4",
    "zod": "^3.24.1",
    "@hacksphere/database": "workspace:*",
    "@hacksphere/auth": "workspace:*",
    "@hacksphere/events": "workspace:*",
    "@hacksphere/config": "workspace:*",
    "@hacksphere/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.18.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "typescript": "^5.7.2"
  }
}
